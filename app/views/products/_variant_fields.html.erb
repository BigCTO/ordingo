<%= content_tag :div, class: "nested-fields", data: { new_record: form.object.new_record? } do %>

  <div class="py-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6" >

    <div class="sm:col-span-6">
      <label for="cover_photo" class="block text-sm font-medium text-gray-700">
        Images
      </label>
      <div class="mt-2 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-md">
        <div class="space-y-1 text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48" aria-hidden="true">
            <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
          <div class="flex text-sm text-gray-600 justify-center">
            <%= form.label :images, class: "relative cursor-pointer bg-white rounded-md font-medium text-indigo-600 hover:text-indigo-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-indigo-500" do %>
              <span>Upload a file</span>
              <%= form.file_field :images, direct_upload: true, class: "sr-only" %>
            <% end %>

          </div>
          <p class="text-xs text-gray-500">
            PNG, JPG, GIF up to 10MB
          </p>
        </div>
      </div>
    </div>

    <div class="sm:col-span-6">
      <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="sm:col-span-6">
      <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.text_field :description, class: "form-control" %>
      </div>
    </div>

    <div class="sm:col-span-6">
      <%= form.label :price, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.number_field :price, class: "form-control" %>
      </div>
    </div>


    <div class="sm:col-span-2">
      <%= form.label :weight, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.number_field :weight, class: "form-control" %>
      </div>
    </div>

    <div class="sm:col-span-2">
      <%= form.label :inventory, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.number_field :inventory,class: "form-control" %>
      </div>
    </div>

    <%= form.hidden_field :_destroy %>
    <div class="sm:col-span-6">
      <div class="border p-3 md:grid mt-2">
        <div class="md:col-span-1">
          <h3 class="font-medium leading-6 text-gray-900">Payment Options</h3>
        </div>
        <div class="mt-5 md:mt-0 md:col-span-2" data-controller="standard-pricing">
          <div class="my-8">
            <h4 class="font-medium leading-6 text-gray-900">Standard Pricing</h4>
            <template data-standard-pricing-target="template">
              <%= form.fields_for :standard_pricing, StandardPricing.new, child_index: 'NEW_RECORD' do |standard_pricing| %>
                <%= render "standard_pricing_fields", form: standard_pricing %>
              <% end %>
            </template>
            <%= form.fields_for :standard_pricing do |standard_pricing| %>
              <%= render "standard_pricing_fields", form: standard_pricing %>
            <% end %>
            <div class="py-4 flex justify-end" data-standard-pricing-target="links">
              <%= link_to "Add New Standard Pricing", "#", class: form.object.standard_pricing.present? ? "hide-element add-st-pricing ml-3 inline-flex justify-center text-sm font-medium rounded-md text-indigo-600 hover:text-indigo-700 focus:outline-none" : "add-st-pricing ml-3 inline-flex justify-center text-sm font-medium rounded-md text-indigo-600 hover:text-indigo-700 focus:outline-none", data: { action: "click->standard-pricing#add_association" } %>
            </div>
          </div>
        </div>
        <div class="mt-5 md:mt-0 md:col-span-2" data-controller="subscription-pricing">
          <div class="my-8">
            <h4 class="font-medium leading-6 text-gray-900">Subscription Pricing</h4>
            <template data-subscription-pricing-target="template">
              <%= form.fields_for :subscription_pricings, SubscriptionPricing.new, child_index: 'NEW_RECORD' do |subscription_pricing| %>
                <%= render "subscription_pricing_fields", form: subscription_pricing %>
              <% end %>
            </template>
            <%= form.fields_for :subscription_pricings do |subscription_pricing| %>
              <%= render "subscription_pricing_fields", form: subscription_pricing %>
            <% end %>
            <div class="py-4 flex justify-end" data-subscription-pricing-target="links">
              <%= link_to "Add New Subscription Pricing", "#", class: "ml-3 inline-flex justify-center text-sm font-medium rounded-md text-indigo-600 hover:text-indigo-700 focus:outline-none", data: { action: "click->subscription-pricing#add_association" } %>
            </div>
          </div>
        </div>
      </div>
    </div>



<!--    <div class="sm:col-span-6" data-controller="nested-bundle">-->

<!--      <div>-->
<!--        <h3 class="text-lg leading-6 font-medium text-gray-900">-->
<!--          Variant Bundles-->
<!--        </h3>-->
<!--        <p class="mt-1 text-sm text-gray-500">-->
<!--          The meat of the product is variants.-->
<!--        </p>-->
<!--      </div>-->


<!--      <template data-nexted-bundle-target="template">-->
        <%#= form.fields_for :bundles, Bundle.new, child_index: 'NEW_RECORD' do |bundle| %>
          <%#= render "bundle_fields", form: bundle %>
        <%# end %>
<!--      </template>-->

      <%#= form.fields_for :bundles do |bundle| %>
        <%#= render "bundle_fields", form: bundle %>
      <%# end %>

<!--      <div class="py-4 flex justify-end" data-nested-bundle-target="links">-->
        <%#= link_to "Add Bundle", "#", class: "ml-3 inline-flex justify-center text-sm font-medium rounded-md text-white text-indigo-600 hover:text-indigo-700 focus:outline-none", data: { action: "click->nested-bundle#add_association" } %>
<!--      </div>-->

<!--    </div>-->



    <small><%= link_to "Remove", "#", class: "text-red-500", data: { action: "click->nested-variant#remove_association" } %></small>

  </div>

<% end %>
<style>
    .align-left{
        text-align: right;
    }
    .hide-element{
        display: none;
    }
</style>