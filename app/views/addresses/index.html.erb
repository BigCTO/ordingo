<%= content_for :title, "Addresses" %>
<%= turbo_stream_from :addresses %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <div>
      <h1 class="h3">Addresses</h1>

      <div class="text-sm font-medium">
        <span class="text-gray-500">Sort by:</span>
        <%= sortable @addresses, :customer_id, "Customer", class: "text-gray-700 mr-1" %>
        <%= sortable @addresses, :street, "Street", class: "text-gray-700 mr-1" %>
        <%= sortable @addresses, :number, "Number", class: "text-gray-700 mr-1" %>
        <%= sortable @addresses, :city, "City", class: "text-gray-700 mr-1" %>
        <%= sortable @addresses, :state, "State", class: "text-gray-700 mr-1" %>
        <%= sortable @addresses, :zipcode, "Zipcode", class: "text-gray-700 mr-1" %>
        <%= sortable @addresses, :country, "Country", class: "text-gray-700 mr-1" %>
        <%= sortable @addresses, :primary, "Primary", class: "text-gray-700 mr-1" %>
      </div>
    </div>

    <%= link_to t("shared.scaffold.new.title", model: "Address"), new_address_path, class: "btn btn-white" %>
  </div>

  <%= tag.div id: ("addresses" if first_page?), class: "bg-white rounded-md shadow p-6 space-y-8" do %>
    <%= render partial: "addresses/index", collection: @addresses, as: :address, cached: true %>

    <div class="hidden only:flex flex-col items-center justify-between lg:flex-row">
      <%= image_tag "empty.svg", class: "mb-4 lg:w-1/2" %>
      <div class="flex-1 text-center">
        <p class="mb-4 h3">Create your first Address</p>
        <%= link_to t("shared.scaffold.new.title", model: "Address"), new_address_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <% if @pagy.pages > 1 %>
    <div class="my-6 text-center">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>
