<%= content_for :title, "Prices ##{@price.id}" %>
<%= turbo_stream_from @price %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <h1 class="h3">
      <%= link_to "Prices", prices_path, class: "text-black" %>
      <span class="text-gray-400 font-light mx-2">\</span>
      Price #<%= @price.id %>
    </h1>
    <%= link_to t("edit"), edit_price_path(@price), class: "btn btn-white" %>
  </div>

  <div class="p-8 bg-white rounded shadow">
    <%= render @price %>
  </div>
</div>
