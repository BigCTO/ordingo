<%= form_with(model: price) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :order_id %>
    <%= form.text_field :order_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :total %>
    <%= form.text_field :total, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :subtotal %>
    <%= form.text_field :subtotal, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :discount_amount %>
    <%= form.text_field :discount_amount, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :tax_amount %>
    <%= form.text_field :tax_amount, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :shipping_fee %>
    <%= form.text_field :shipping_fee, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), prices_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), price_path(@price), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
