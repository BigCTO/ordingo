<%= form_with(model: customer) do |form| %>

 <div class="mt-6 px-4 py-5 sm:rounded-b-lg">
    <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="md:col-span-1">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Name</h3>
        <p class="mt-1 text-sm text-gray-500">
          Give them a name.
        </p>
      </div>
      <div class="mt-5 md:mt-0 md:col-span-2">
          <div class="grid grid-cols-2 gap-5">

            <div class="sm:col-span-1">
              <%= form.label :first_name, class: "label" %>
              <div class="mt-1">
                <%= form.text_field :first_name, class: "form-control" %>
              </div>
            </div>

            <div class="sm:col-span-1">
              <%= form.label :last_name, class: "label" %>
              <div class="mt-1">
                <%= form.text_field :last_name, class: "form-control" %>
              </div>
            </div>

          </div>
      </div>
    </div>
 </div>

  <div class="mt-6 px-4 py-5 sm:rounded-b-lg">
    <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="md:col-span-1">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Contact Info</h3>
        <p class="mt-1 text-sm text-gray-500">
          Give them some contact info.
        </p>
      </div>
      <div class="mt-5 md:mt-0 md:col-span-2">
          <div class="grid grid-cols-2 gap-5">


            <div class="sm:col-span-1">
              <%= form.label :email, class: "label" %>
              <div class="mt-1">
                <%= form.email_field :email, class: "form-control" %>
              </div>
            </div>

            <div class="sm:col-span-1">
              <%= form.label :phone, class: "label" %>
              <div class="mt-1">
                <%= form.text_field :phone, class: "form-control" %>
              </div>
            </div>

          </div>
      </div>
    </div>
  </div>


  <div class="mt-6 px-4 py-5 sm:rounded-lg sm:p-6">
    <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="md:col-span-1">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Address</h3>
        <p class="mt-1 text-sm text-gray-500">
          How are we going to reach them?
        </p>
      </div>
      <div class="mt-5 md:mt-0 md:col-span-2">
        <div class="my-8 divide-y divide-gray-200" data-controller="order-items"> 

          <%= form.fields_for :addresses do |address| %>
            <div class="py-6 grid grid-cols-3 gap-5">


              <div class="col-span-3 sm:col-span-2">
                <%= address.label :street, class: "label" %>
                <div class="mt-1">
                  <%= address.text_field :street, class: "form-control" %>
                </div>
              </div>

              <div class="col-span-3 sm:col-span-1">
                <%= address.label :number, class: "label" %>
                <div class="mt-1">
                  <%= address.text_field :number, class: "form-control" %>
                </div>
              </div>

              <div class="col-span-3 sm:col-span-3">
                <%= address.label :city, class: "label" %>
                <div class="mt-1">
                  <%= address.text_field :city, class: "form-control" %>
                </div>
              </div>

              <div class="col-span-3 sm:col-span-1">
                <%= address.label :state, class: "label" %>
                <div class="mt-1">
                  <%= address.text_field :state, class: "form-control" %>
                </div>
              </div>

              <div class="col-span-3 sm:col-span-1">
                <%= address.label :zipcode, class: "label" %>
                <div class="mt-1">
                  <%= address.text_field :zipcode, class: "form-control" %>
                </div>
              </div>

              <div class="col-span-3 sm:col-span-1">
                <%= address.label :country, class: "label" %>
                <div class="mt-1">
                  <%= address.text_field :country, class: "form-control" %>
                </div>
              </div>

              <div class="col-span-6 sm:col-span-1">
                <div>
                  <%= address.label :primary, class: "label" %>
                  <div class="mt-1">
                    <%= address.check_box :primary, class: "form-control" %>
                  </div>
                </div>
              </div>

            </div>
          <% end %>

        </div> 
      </div>
    </div>

    <div className="w-full flex justify-end">
      <%= form.submit "Save Customer", class: "inline-flex items-center px-4 py-2 border border-indigo-500 rounded-md shadow-sm text-sm font-medium text-white bg-indigo-500 hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>


<% end %>