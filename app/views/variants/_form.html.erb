<%= form_with(model: variant) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :account_id %>
    <%= form.number_field :account_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :product_id %>
    <%= form.text_field :product_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.text_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :weight %>
    <%= form.text_field :weight, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :inventory %>
    <%= form.number_field :inventory, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), variants_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), variant_path(@variant), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
