<%= content_for :title, "Variants" %>
<%= turbo_stream_from :variants %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <div>
      <h1 class="h3">Variants</h1>

      <div class="text-sm font-medium">
        <span class="text-gray-500">Sort by:</span>
        <%= sortable @variants, :account_id, "Account", class: "text-gray-700 mr-1" %>
        <%= sortable @variants, :product_id, "Product", class: "text-gray-700 mr-1" %>
        <%= sortable @variants, :name, "Name", class: "text-gray-700 mr-1" %>
        <%= sortable @variants, :description, "Description", class: "text-gray-700 mr-1" %>
        <%= sortable @variants, :price, "Price", class: "text-gray-700 mr-1" %>
        <%= sortable @variants, :weight, "Weight", class: "text-gray-700 mr-1" %>
        <%= sortable @variants, :inventory, "Inventory", class: "text-gray-700 mr-1" %>
      </div>
    </div>

    <%= link_to t("shared.scaffold.new.title", model: "Variant"), new_variant_path, class: "btn btn-white" %>
  </div>

  <%= tag.div id: ("variants" if first_page?), class: "bg-white rounded-md shadow p-6 space-y-8" do %>
    <%= render partial: "variants/index", collection: @variants, as: :variant, cached: true %>

    <div class="hidden only:flex flex-col items-center justify-between lg:flex-row">
      <%= image_tag "empty.svg", class: "mb-4 lg:w-1/2" %>
      <div class="flex-1 text-center">
        <p class="mb-4 h3">Create your first Variant</p>
        <%= link_to t("shared.scaffold.new.title", model: "Variant"), new_variant_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <% if @pagy.pages > 1 %>
    <div class="my-6 text-center">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>
